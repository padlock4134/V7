/*.js  /:splat  200

# Ensure CSS files are served correctly
/assets/*.css  /assets/:splat  200
/assets/*.*css  /assets/:splat  200
/*.css  /:splat  200

# Ensure images are served correctly
/*.png  /:splat  200

# Do NOT redirect JS requests to index.html
/assets/*  /assets/:splat  200!

